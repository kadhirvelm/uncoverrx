{
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "selector-class-pattern": null,
        "indentation": 4,
        "max-nesting-depth": 4,
        "string-quotes": "double",
        "scss/percent-placeholder-pattern": null,
        "no-missing-end-of-source-newline": null
    },
    "ignoreFiles": [
        "**/*.js",
        "**/*.ts",
        "**/*.tsx"
    ]
}